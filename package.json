{
  "name": "oddvest",
  "version": "1.0.0",
  "description": "OddBird's Trello Power-up for Harvest integration",
  "repository": "github:oddbird/oddvest",
  "author": "Carl Meyer <carl@oddbird.net>",
  "contributors": [
    "Jonny Gerig Meyer <jonny@oddbird.net>"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "engines": {
    "node": "10.16.3"
  },
  "scripts": {
    "prettier:js": "prettier --write \"**/*.{js,ts}\"",
    "prettier:other": "prettier --write \"**/*.{json,yml,md,html}\"",
    "eslint": "eslint \"**/*.{js,ts}\" --ext .js,.ts --fix",
    "tsc": "tsc",
    "lint": "run-s prettier:* eslint tsc",
    "test:ci": "JEST_JUNIT_OUTPUT_DIR=\"./coverage\" jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:coverage": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "watch": "rollup -c --watch",
    "build": "rollup -c"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/bluebird": "^3.5.28",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "core-js": "^3.3.3",
    "coveralls": "^3.0.7",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rollup": "^1.25.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^1.10.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,yml,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}

{
  "name": "oddvest",
  "version": "1.0.0",
  "description": "OddBird's Trello Power-up for Harvest integration",
  "repository": "github:oddbird/oddvest",
  "author": "Carl Meyer <carl@oddbird.net>",
  "contributors": [
    "Jonny Gerig Meyer <jonny@oddbird.net>",
    "Kit La Touche <kit@oddbird.net>"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "engines": {
    "node": "12.16.1",
    "yarn": "1.22.0"
  },
  "scripts": {
    "prettier:js": "prettier --write \"**/*.{js,ts}\"",
    "prettier:other": "prettier --write \"**/*.{json,yml,md,html}\"",
    "eslint": "eslint \"**/*.{js,ts}\" --ext .js,.ts --fix",
    "tsc": "tsc",
    "lint": "run-s prettier:* eslint tsc",
    "test:ci": "JEST_JUNIT_OUTPUT_DIR=\"./coverage\" jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:coverage": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "watch": "rollup -c --watch",
    "build": "rollup -c"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-typescript": "^3.0.0",
    "@types/bluebird": "^3.5.29",
    "@types/lodash.uniqby": "^4.7.6",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "bluebird": "^3.7.2",
    "core-js": "^3.6.4",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "fetch-mock": "^9.0.0-beta.2",
    "flush-promises": "^1.0.2",
    "husky": "^4.2.3",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.8",
    "lodash.uniqby": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.31.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.2.0",
    "tslib": "^1.11.0",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,yml,md,html}": [
      "prettier --write"
    ]
  }
}
